# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JS-Files
[*.{js}]
indent_size = 2
indent_style = space

# JSON-Files
[*.json]
indent_style = tab

# ReST-Files
[*.rst]
indent_size = 2
indent_style = space
max_line_length = 80

# YAML-Files
[*.{yaml,yml}]
indent_size = 2
indent_style = space

# package.json
[package.json]
indent_size = 2
indent_style = space

# TypoScript
[*.{typoscript,tsconfig}]
indent_size = 2
indent_style = space

# XLF-Files
[*.xlf]
indent_style = tab
indent_style = space

# .htaccess
[{_.htaccess,.htaccess}]
indent_style = tab

[*.{htm,html}]
indent_size = 2
indent_style = space

[{*.scss}]
indent_size = 2
indent_style = space
