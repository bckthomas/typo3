{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:base",
  	":disableMajorUpdates"
  ],

  "schedule": [
    "before 6am"
  ],

  "timezone": "Europe/Paris",

  "enabledManagers": ["npm", "composer"],

  "packageRules": [
    {
      "matchPaths": ["composer.json"],
      "groupName": "PHP dependencies (root)",
      "automerge": false
    },
    {
      "matchPaths": ["packages/package.json"],
      "groupName": "npm dependencies (packages)",
      "groupSlug": "npm-packages",
      "automerge": false
    }
  ]
}
