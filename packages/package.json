{
  "name": "themes",
  "version": "1.0.0",
  "description": "NPM scripts for themes",
  "main": "index.js",
  "dependencies": {
    "isexe": "^2.0.0",
    "shebang-regex": "^3.0.0",
    "which": "^2.0.2",
    "cross-spawn": "^7.0.3",
    "path-key": "^3.1.1",
    "shebang-command": "^2.0.0"
  },
  "scripts": {
    "clean": "del-cli theme_${site}/Resources/Public/",
    "stylelint": "cross-env-shell stylelint --config config/.stylelintrc --cache --cache-location .cache/.stylelintcache --fix \"theme_${site}/Resources/Private/Src/**/*.scss\"",
    "sass": "sass --update --style=compressed theme_${site}/Resources/Private/Src:theme_${site}/Resources/Public/Css",
    "postcss": "postcss theme_${site}/Resources/Public/Css/**/*.css --base theme_${site}/Resources/Public/Css --config config/postcss.config.js -d theme_${site}/Resources/Public/Css",

    "eslint": "eslint -c config/.eslintrc --cache --cache-location .cache/.eslintcache --fix \"theme_${site}/Resources/Private/Src/**/*.js\"",
    "uglify": "multi-uglifyjs theme_${site}/Resources/Private/Src/**/*.js --source-map -o theme_${site}/Resources/Public/JavaScript --suffix=.min",

    "imagemin": "imagemin --plugin.mozjpeg.progressive=true --plugin.mozjpeg.quality=75 --plugin.gifsicle.interlaced=true --plugin.gifsicle.optimizationLevel=2 --plugin.optipng.optimizationLevel=3 theme_${site}/Resources/Private/Src/Images/* --out-dir=theme_${site}/Resources/Public/Images",
    "svgsprite": "svg-sprite --config config/svgsprite.json theme_${site}/Resources/Private/Src/Icons/*.svg",
    "copyfonts": "cpy theme_${site}/Resources/Private/Src/Fonts/**/* theme_${site}/Resources/Public/Fonts",

    "build:css": "npm run stylelint ; npm run sass ; npm run postcss",
    "build:js": "npm run eslint ; npm run uglify",
    "build:img": "npm run imagemin ; npm run svgsprite",
    "build:fonts": "npm run copyfonts",

    "watch": "npm-run-all --parallel watch:*",
    "build": "npm run clean ; npm run build:css ; npm run build:js ; npm run build:img ; npm run build:fonts"
  },
  "author": "Thomas Beck",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "del-cli": "^5.0.0",
    "eslint": "^8.23.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "multi-uglify-js": "^0.1.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.5",
    "prompt": "^1.3.0",
    "sass": "^1.54.9",
    "stylelint": "^14.11.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "svg-sprite": "^2.0.2"
  }
}
