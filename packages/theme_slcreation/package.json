{
  "name": "theme_slcreation",
  "version": "2.0.0",
  "description": "Th√®me for slcreation website",
  "main": "index.js",
  "scripts": {
    "clean": "del-cli ./Resources/Public/",
    "stylelint": "stylelint --config config/.stylelintrc --cache --cache-location .cache/.stylelintcache --fix \"Resources/Private/Src/**/*.scss\"",
    "sass": "sass --update --style=compressed Resources/Private/Src:./Resources/Public/Css",
    "eslint": "eslint -c config/.eslintrc --cache --cache-location .cache/.eslintcache --fix \"Resources/Private/Src/**/*.js\"",
    "postcss": "postcss ./Resources/Public/Css/**/*.css --base Resources/Public/Css --config config/postcss.config.js -d Resources/Public/Css",
    "uglify": "multi-uglifyjs Resources/Private/Src/**/*.js --source-map -o Resources/Public/JavaScript --suffix=.min",
    "imagemin": "imagemin --plugin.mozjpeg.progressive=true --plugin.mozjpeg.quality=75 --plugin.gifsicle.interlaced=true --plugin.gifsicle.optimizationLevel=2 --plugin.optipng.optimizationLevel=3 Resources/Private/Src/Images/* --out-dir=Resources/Public/Images",
    "svgsprite": "svg-sprite --config config/svgsprite.json Resources/Private/Src/Icons/*.svg",
    "copyfonts": "cpy 'Resources/Private/Src/Fonts/**/*' Resources/Public/Fonts",
    "build:css": "npm run stylelint && npm run sass && npm run postcss",
    "build:js": "npm run eslint && npm run uglify",
    "build:img": "npm run imagemin && npm run svgsprite",
    "build:fonts": "npm run copyfonts",
    "watch:css": "onchange 'Resources/Private/Src/**/*.scss' -- npm run build:css",
    "watch:js": "onchange 'Resources/Private/Src/**/*.js' -- npm run build:js",
    "watch:img": "onchange 'src/assets/**' -- npm run build:img",
    "watch:fonts": "onchange 'Resources/Private/Src/Fonts/**' -- npm run build:fonts",
    "watch": "npm-run-all --parallel watch:*",
    "build": "npm run build:css && npm run build:js && npm run build:img && npm run build:fonts"
  },
  "preinstall": "npx npm-force-resolutions",

  "author": "Thomas Beck",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cpy-cli": "^4.2.0",
    "cssnano": "^5.1.14",
    "del-cli": "^5.0.0",
    "eslint": "^8.23.1",
    "eslint-config-drupal": "^5.0.2",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "multi-uglify-js": "^0.1.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^10.0.0",
    "postcss-scss": "^4.0.5",
    "prompt": "^1.3.0",
    "sass": "^1.54.9",
    "stylelint": "^14.11.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "svg-sprite": "^2.0.2"
  }
}
