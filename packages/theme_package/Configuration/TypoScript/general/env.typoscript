[applicationContext = Development]
	config {
		compressCss = 0
		concatenateCss = 0
		compressJs = 0
		concatenateJs = 0
		linkVars := addToList(debug(1))
	}
[end]

[applicationContext = Production/Staging] || [applicationContext = Production/Testing]
	page.meta.robots = noindex,nofollow
[end]

[applicationContext = Production]
	config {
		compressCss = 1
		concatenateCss = 1
		compressJs = 1
		concatenateJs = 1
	}
[end]
